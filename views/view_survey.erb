<h1><%= @survey.name %></h1>

<div class="well">
  <form action="/surveys/<%= @survey.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class = "form-group">
      <label for="name">Rename Survey!</label>
      <input type="text" name="name" id = "name" class = "form-control">
      <br>
      <button type = "submit" class="btn btn-primary">Update!</button>
    </div>
  </form>

  <form action="/surveys/<%= @survey.id() %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn btn-primary">Delete</button>
  </form>
</div>

<div class="well">
  <% if @questions.any?() %>

    <h3>Here are the questions for selected survey!</h3>

    <ul>
      <% @survey.questions.each() do |question| %>
        <li>
          <a href="/questions/<%= question.id() %>"><%= question.description %></a>
        </li>
      <% end %>
    </ul>

  <% else %>

    <h3>THERE AREN'T ANY QUESTIONS!</h3>

  <% end %>

  <h3>Add Question to survey</h3>


  <form action="/surveys/<%= @survey.id() %>" method="post">
    <div class="form-group">
      <input type="hidden" name="survey_id" id="survey_id" value="<%= @survey.id() %>">
      <label for="description">Submit Question:</label>
      <input type="text" name="description" id="description" class="form-control">
      <br>
      <button type="submit" class="btn btn-primary">Submit!</button>
    </div>
  </form>
</div>
